package ToolsForTasks;

import java.util.*;

public class Interface {

	public static void main(String[] args) {
	   Scanner scanner = new Scanner(System.in);
        ToolList toolsList = new ToolList();
        JobList jobsList = new JobList();
        
        while (true) {
            System.out.println("1. Manage Tools\n2. Manage Jobs\n3. Exit");
            int choice = scanner.nextInt();
            scanner.nextLine();
            
            if (choice == 1) {
                System.out.println("1. Add Tool\n2. Edit Tool\n3. Delete Tool\n4. Search Tool\n5. View Tools");
                int toolChoice = scanner.nextInt();
                scanner.nextLine();
                if (toolChoice == 5) {
                	ToolList.displayTools();
//                    System.out.println("Enter tool name: ");
//                    String name = scanner.nextLine();
//                    System.out.println("Enter category: ");
//                    String category = scanner.nextLine();
//                    toolsList.addTool(name, category);
                }
            } else if (choice == 2) {
                System.out.println("1. Add Job\n2. Edit Job\n3. Delete Job\n4. Search Job\n5. View Jobs");
                int jobChoice = scanner.nextInt();
                scanner.nextLine();
                if (jobChoice == 1) {
                    System.out.println("Enter job title: ");
                    String title = scanner.nextLine();
                    System.out.println("Enter description: ");
                    String description = scanner.nextLine();
                    jobsList.addJob(title, description);
                }
            } else {
                break;
            }
        }
        scanner.close();
	}
}
