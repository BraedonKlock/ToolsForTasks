package ToolsForTasks;


import java.io.BufferedReader;
import java.io.*;
import java.util.*;

public class JobList {
	static ArrayList<Job> JobList = new ArrayList<>();
	
	static Scanner scanner = new Scanner(System.in);
	
	public static void addJob() {
		System.out.println("What is job are you doing?: ");
		String jobType = scanner.nextLine();
		System.out.println("What is the address of the job?: ");
		String address = scanner.nextLine();
		System.out.println("job description: ");
		String description = scanner.nextLine();
		
		Job job = new Job(jobType, address, description);
		JobList.add(job);
	}
	
	public static void editJob() {
		
	}
	
	public static void deleteJob() {
		
	}
	
	public static void searchJob() {
		for (int i = 0; i <JobList.size(); i ++) {
			Job job = JobList.get(i);
			System.out.print(job.toString());
		}
	}
	
	public static void listJobs() {
		for (int i = 0; i <JobList.size(); i ++) {
			Job job = JobList.get(i);
			System.out.print(job.toString());
		}
	}
	
	public class CSVReader {
	    public static void main(String[] args) {
	        String filePath = "jobs.csv"; // Ensure the file is in the correct location
	        
	        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
	            String line;
	            
	            // Read the header (optional, depending on your CSV format)
	            if ((line = br.readLine()) != null) {
	                System.out.println("Headers: " + line);
	            }
	            
	            // Read the rest of the file
	            while ((line = br.readLine()) != null) {
	                String[] values = line.split(","); // Splitting by comma
	                
	                // Print each value
	                for (String value : values) {
	                    System.out.print(value + "\t");
	                }
	                System.out.println(); // New line for next row
	            }
	        } catch (IOException e) {
	            System.err.println("Error reading file: " + e.getMessage());
	        }
	    }
	}
}
